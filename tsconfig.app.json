{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ],
    // ðŸ’¡ Added baseUrl to resolve paths relative to the project root
    "baseUrl": "./",
    // ðŸ’¡ Added path alias for the environments folder
    "paths": {
      "@env/*": [
        "src/environments/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
